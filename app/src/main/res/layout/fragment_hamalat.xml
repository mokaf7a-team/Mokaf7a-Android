<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/form_box"
    tools:context=".fragments.HamalatFragment">

    <ImageButton
        android:id="@+id/viewHamalatBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginVertical="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/red_shape"
        android:paddingBottom="200dp"
        android:src="@drawable/edit_large"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/addHamlaBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/addHamlaBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/blue_btn"
        android:paddingBottom="200dp"
        android:src="@drawable/add_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/viewHamalatBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/new_jf"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:paddingHorizontal="8dp"
        android:text="عرض / تعديل حملة"
        android:textAlignment="center"
        android:textColor="@color/whiteColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewHamalatBtn"
        app:layout_constraintEnd_toEndOf="@+id/viewHamalatBtn"
        app:layout_constraintStart_toStartOf="@+id/viewHamalatBtn"
        app:layout_constraintTop_toTopOf="@+id/viewHamalatBtn"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/new_jf"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:paddingHorizontal="8dp"
        android:text="اضافة حملة جديدة"
        android:textAlignment="center"
        android:textColor="@color/whiteColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/addHamlaBtn"
        app:layout_constraintEnd_toStartOf="@+id/viewHamalatBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/addHamlaBtn"
        app:layout_constraintTop_toTopOf="@+id/addHamlaBtn"
        app:layout_constraintVertical_bias="0.65" />
</androidx.constraintlayout.widget.ConstraintLayout>